<!-- This sales transaction screen is great for Retailers! -->
<line>
    <column name="label.item" width="185" align="left" value="&lt;html&gt;#if ($ticketline.isProductCom()) &lt;i&gt;*&amp;nbsp;&amp;nbsp;${ticketline.printName()}&lt;/i&gt; #else ${ticketline.printName()} #end&lt;br&gt;${ticketline.getProductAttSetInstDesc()}"/>
    <column name="label.price" width="45" align="right" value="${ticketline.printPrice()}"/>
    <column name="label.units" width="35" align="right" value="x${ticketline.printMultiply()}"/>
    <column name="label.taxrate" width="30" align="right" value="${ticketline.printTaxRate()}"/>
    <column name="label.tax" width="30" align="right" value="${ticketline.printTax()}"/>
    <column name="label.value" width="65" align="right" value="${ticketline.printValue()}"/>
</line>

